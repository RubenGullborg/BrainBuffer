---
interface Props {
  src: string;
  title: string;
  description?: string;
}

const { src, title, description } = Astro.props;
---

<div class="my-32 mx-auto max-w-6xl px-8">
  <div class="space-y-3">
    <div class="font-mono text-xs text-black/40">
      <span>VIDEO_ANALYSIS: {title}</span>
    </div>

    <div class="border border-black/10 overflow-hidden">
      <video class="w-full aspect-video" controls preload="metadata">
        <source src={src} type="video/mp4" />
        Din browser underst√∏tter ikke video-elementet.
      </video>
    </div>

    {description && <p class="text-sm text-black/70">{description}</p>}
  </div>
</div>
