---
interface Props {
  src: string;
  alt: string;
  caption?: string;
  description?: string;
  memoryId?: string;
  timestamp?: string;
}

const {
  src,
  alt,
  caption,
  description,
  memoryId = Math.floor(Math.random() * 10000),
  timestamp = new Date().toISOString().slice(0, 10).replace(/-/g, "."),
} = Astro.props;
---

<div class="my-32 mx-auto max-w-5xl px-8">
  <div class="space-y-3">
    <div class="font-mono text-xs text-black/40">
      <span>VISUAL_SPOTLIGHT: {memoryId}</span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
      <div class="md:col-span-3 border border-black/10 overflow-hidden">
        <img src={src} alt={alt} class="w-full h-full object-cover" />
      </div>

      <div class="md:col-span-2 space-y-4 flex flex-col justify-center">
        {caption && <h3 class="text-xl font-light">{caption}</h3>}

        {
          description && (
            <p class="text-sm text-black/70 leading-relaxed">{description}</p>
          )
        }

        <div class="text-xs font-mono text-black/40 mt-auto">
          MEMORY_TIMESTAMP: {timestamp}
        </div>
      </div>
    </div>
  </div>
</div>
