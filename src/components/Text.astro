---
interface Props {
  title?: string;
  id?: string;
}

const { title, id } = Astro.props;
---

<div class="my-24 mx-auto max-w-4xl px-8" id={id}>
  {title && <h2 class="text-2xl font-light mb-6">{title}</h2>}

  <div class="prose prose-lg text-black/80 leading-relaxed font-mono">
    <slot />
  </div>
</div>
