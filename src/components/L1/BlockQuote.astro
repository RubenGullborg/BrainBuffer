---
interface Props {
  quote: string;
  author: string;
  work?: string;
  year?: string | number;
  importance?: "primary" | "secondary"; // For visual differentiation from regular quotes
}

const { quote, author, work, year, importance = "primary" } = Astro.props;
---

<div class="my-32 mx-auto max-w-4xl px-8">
  <div class={`relative pl-8`}>
    <div class="font-mono text-xs text-black/40 mb-4">
      MEMORY_PATTERN: SIGNIFICANT_REFERENCE
    </div>
    
    <div class="space-y-6">
      <blockquote class={`${importance === "primary" ? "text-3xl" : "text-2xl"} font-mono italic leading-relaxed`}>
        <span class="absolute left-0 top-0 text-3xl text-black/20">[</span>
        {quote}
        <span class="absolute right-2 bottom-0 text-3xl font-mono text-black/20">endl]</span>
      </blockquote>
      
      <div class="flex flex-col pt-2">
        <div class="flex items-baseline gap-4">
          <div class="font-mono text-sm text-black/40">AUTH:</div>
          <span class="text-lg">{author}</span>
        </div>
        
        {(work || year) && (
          <div class="flex items-baseline gap-4 mt-1">
            <div class="font-mono text-sm text-black/40">REF:</div>
            <div class="text-sm text-black/70">
              {work && <span>{work}</span>}
              {work && year && <span> | </span>}
              {year && <span>{year}</span>}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</div>
