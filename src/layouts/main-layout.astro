---
const {title} = Astro.props
import Nav from "../components/Nav"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="BrainBuffer" content="Buffer overflow" />
		<meta title={title}/>
	</head>
		<body>
			<main>
				<Nav client:load/>
				<slot/>
			</main>
		</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
